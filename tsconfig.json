{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
//    "module": "amd",
    "lib": [
      "esnext",
      "dom"
    ],
    "sourceMap": false,
    "declaration": false,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "suppressImplicitAnyIndexErrors": false,
    "typeRoots": [
      "node_modules/@types",
      "./src/main/webapp/app/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  },
  "include": [
    "src/**/*.ts",
    "./server.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
